    \entry{IDPZ3ReasoningEngine}{misc}{}
      \name{author}{4}{}{%
        {{hash=bd493fcefd6ae3eee8905b34f25193bc}{%
           family={Carbonnelle},
           familyi={C\bibinitperiod},
