      \strng{namehash}{f4c4765d29a6391b9d7599048aef9f7d}
      \strng{fullhash}{f4c4765d29a6391b9d7599048aef9f7d}
      \strng{bibnamehash}{f4c4765d29a6391b9d7599048aef9f7d}
