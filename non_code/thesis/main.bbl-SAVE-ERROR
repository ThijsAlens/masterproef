        {{hash=0ebcd20c99578ce289c2f5f31e7f5007}{%
           family={Vennekens},
           familyi={V\bibinitperiod},
           given={Joost},
           giveni={J\bibinitperiod}}}%
        {{hash=f86638f13cb0b063c3dcbdc37f91ed41}{%
           family={Denecker},
